.table-responsive
  =form_for([@confrenz,@confrenz.subjects.build]) do |f|
    table.table.table-striped
      thead
        tr
          th
            | Tytuł konferencji
          th
            | Treść konferencji
      tbody
        tr
          td
            = f.text_field(:name)
          td
            = f.text_field(:hour)
    .form-buttons
      = f.submit("Potwierdź")
